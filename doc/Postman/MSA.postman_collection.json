		{
			"name": "Keycloak Token",
			"item": [
				{
					"name": "Get Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var responseBody = pm.response.text();",
									"var jsonData = JSON.parse(responseBody);",
									"var token = jsonData.access_token;",
									"var refresh_token = jsonData.refresh_token;",
									"pm.globals.set(\"ACCESS_TOKEN_MSA\", token);",
									"pm.globals.set(\"REFRESH_TOKEN_MSA\", refresh_token);"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
